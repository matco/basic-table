{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"checkJs": true,
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"noEmit": true,
		"lib": [
			"ESNext",
			"DOM"
		],
		"skipLibCheck": true
	},
	"exclude": [
		"test",
		"example/dist",
		"webpack.config.js"
	]
}
